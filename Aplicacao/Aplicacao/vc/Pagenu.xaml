<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicacao.VC.Pagenu">

    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand" Text="Seja Bem vindo por favor insira seus dados" FontSize="18" TextColor="black"/>

            <Entry x:Name="name" TextColor="black" Margin="50" Placeholder="Primeiro e Último nome">
            </Entry>

            <Entry x:Name="passWd" TextColor="black" Margin="50" Placeholder="Palavra-passe" IsPassword="True">
                
            </Entry>
            <Label Text="Hello"></Label>

            <CollectionView x:Name="collectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Entry Text="{Binding Fname}"></Entry>
                            <Entry Text="{Binding Passwd}"></Entry>

                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Margin="20" HeightRequest="40" x:Name="Pagelogin" Text="Set" Clicked="Getandsetdata"/>

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>