<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFSQLiteSample.vc.PageLog">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand"  Text="Por Favor insira seus dados de login" FontSize="20" ></Label>
            <Entry x:Name="nomeUSR" Placeholder="Nome de Utilizador" Margin="0,100,0,0"></Entry>
            <Entry x:Name="passUSR" IsPassword="True" Placeholder="Palavra-Passe" Margin="0,100,0,0"></Entry>
            <Button Margin="50,100,50,0" Text="Login" Clicked="Login"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>