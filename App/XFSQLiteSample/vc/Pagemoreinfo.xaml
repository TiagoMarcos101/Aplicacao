<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFSQLiteSample.vc.Pagemoreinfo">
    <ContentPage.Content>
        <StackLayout>
            <CollectionView x:Name="collectionView"  >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="Informação pedida" FontSize="Large" />
                            <Label Text="{Binding Name}" FontSize="Medium" />
                            <Label Text="{Binding QuantCoz}" FontSize="Medium" />
                            <Label Text="{Binding TipoCoz}" FontSize="Medium" />
                            <Label Text="{Binding Time}" FontSize="Medium" />


                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="numero de cozidos" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>